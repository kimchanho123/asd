#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
#define SIZE 3
struct student {
	int num;
	char name[20];
	double grade;
};

int main()
{
	struct student list[SIZE];

	for (int i = 0; i < SIZE; i++)
	{
		printf("학번을 입력하시오:");
		scanf("%d", &list[i].num);
		getchar();
		printf("이름을 입력하시오:");
		scanf("%d", list[i].name);
		getchar();
		printf("학점을 입력하시오:");
		scanf("%lf", &list[i].grade);
		getchar();
		printf("\n");
	}
	printf("======================================================\n");
	for (int i = 0; i < SIZE; i++)
	{
		printf("학번:%d, 이름:%s, 학점:%lf\n", list[i].num, list[i].name, list[i].grade);
	}
	printf("======================================================\n");
	return 0;
}
